{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
  "rules": {
    "import/extensions": 0,
    "max-classes-per-file": 1,
    "no-empty": [
      2,
      {
        "allowEmptyCatch": true
      }
    ],
    "no-promise-executor-return": 1,
    "no-shadow": "off",
    "no-underscore-dangle": "off"
  }
}